<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
        text-align: center;
      }
      .btn-edit{
        background-color: orange;
        outline: none;
        border: none;
        height: 24px;
        width: 48px;
        border-radius: 2px;
        margin: 8px;
        cursor: pointer;
        display: inline-block;
        text-decoration: none;
      }
      .btn-delete{
        background-color: rgb(255, 51, 0);
        outline: none;
        border: none;
        height: 24px;
        width: 64px;
        border-radius: 2px;
        margin: 8px;
        cursor: pointer;
        display: inline-block;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a href="/edit-crud?id=<%=dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
          <a href="/delete-crud?id=<%=dataTable[i].id%>" class="btn-delete" type="button">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
